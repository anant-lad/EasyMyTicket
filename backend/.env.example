# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# AI Models (Optional overrides)
METADATA_EXTRACTION_MODEL=llama-3.1-8b-instant
CLASSIFICATION_MODEL=llama-3.3-70b-versatile

# Email Configuration (SMTP for sending)
SUPPORT_EMAIL=your-support-email@gmail.com
SUPPORT_EMAIL_APP_PASSWORD=your-google-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# IMAP Configuration (for receiving emails to create tickets)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true
EMAIL_CHECK_INTERVAL=60
PROCESSED_EMAIL_FOLDER=Processed

# Email Polling Agent Configuration
AUTO_START_EMAIL_AGENT=false
EMAIL_AGENT_MAX_EMAILS=10

# GROQ API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=Name
DB_USER=USER
DB_PASSWORD=PASSWORD

# Application Configuration (optional)
PORT=5000
HOST=0.0.0.0
ENVIRONMENT=development

# AWS S3 Configuration (for Automated Backups)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name

# Data Security (Master Passphrase)
# Keep this safe! Used to encrypt backups before upload to S3.
BACKUP_ENCRYPTION_KEY=your_strong_passphrase_here
